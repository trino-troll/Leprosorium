<h4>Post details:</h4>

<p>
	<%= @row['content'] %>
	<br>
	<br>
	Added at <%= @row['created_date']  %>
</p>
<br>
<p>Coments:</p>

<% @comments.each do |comment| %>
	<p>
		<%= comment['content'] %>
		<br>
		<span style="font-size: 75%; color: #999">Added at <%= comment['created_date'] %></span>
		<hr>
	</p>
<% end %>

<form action="/details/<%= @row['id'] %>" method="POST">
	<div>
		<textarea name="content" class="form-control" placeholder="Type comment text here" rows="5" style="width: 400px"></textarea>
	</div>
	<br>
	<div>
		<button type="submit" class="btn btn-primary" >Add comment</button>
	</div>
</form>